<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body>
  <%- include('./partials/header') %>
  
  <div class="container">
    <h1 class="mb-5">Ya soy un Cuarentenial</h1>
    <form action="" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Email</label>
          <input type="email" value="<%= (typeof old != 'undefined' && !errors.email) ? old.email : '' %>" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          <small class="text-danger"><%= (typeof errors != 'undefined' && errors.email) ? errors.email.msg : '' %></small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" name="password" class="form-control" id="exampleInputPassword1">
          <small class="text-danger"><%= (typeof errors != 'undefined' && errors.password) ? errors.password.msg : '' %></small>
        </div>
        <div class="form-group form-check">
          <input name="remember" type="checkbox" class="form-check-input" id="remember">
          <label class="form-check-label" for="remember">Recordame como usuarix</label>
        </div>
        <button type="submit" class="btn btn-primary">Acceder</button>
    </form>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>